<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout 
        android:id="@+id/list_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="100px"
        android:background="#ffffff"
        >
          <ImageButton
            android:id="@+id/acti_refresh"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/refreshsmall"
            android:text="Refresh_NameList" />
        <TextView 
            android:id="@+id/acti_titletext"
            android:layout_width="wrap_content"
             android:layout_height="80dp"
             android:gravity="center"
             android:textSize="30dp"
             android:text="Blind"
             android:layout_alignParentLeft="true"
             android:layout_alignParentRight="true"
             android:layout_marginLeft="80dp"
             android:layout_marginRight="80dp"
            />

      

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/acti_refresh"
            android:layout_marginRight="16dp"
            android:background="@drawable/list_next"
            android:text="Button" />

		</RelativeLayout>


    

    <ListView
        android:id="@+id/acti_listshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acti_refresh"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100px"
         >

    </ListView>
</RelativeLayout>