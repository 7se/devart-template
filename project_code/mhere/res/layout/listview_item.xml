<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listview_item"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">
	<ImageView 
	    android:id="@+id/listview_item_photo"
	    android:layout_height="50dp"
	    android:layout_width="50dp"
	    android:layout_gravity="left"
	    android:layout_marginLeft="0dp"
	    />	

    <TextView
        android:id="@+id/listview_item_name"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:text="" />
  	    <TextView
        android:id="@+id/listview_item_address"
	    android:layout_width="wrap_content"
        android:layout_height="50dp"   
        android:layout_toRightOf="@+id/listview_item_state"   
         android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"    
         android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp" 
        android:gravity="center_vertical"        
        android:text="" />  
    	<TextView
        android:id="@+id/listview_item_state"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:text="" />
    	<ImageView
        android:id="@+id/listview_item_imgstate"
        android:layout_width="50dp"
        android:layout_height="50dp" 
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp"
        />
	
</RelativeLayout>